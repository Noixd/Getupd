#include <stdlib.h>
#include <stdio.h>

void Getupd(char* ctr, int n, FILE* stream);

int main(void) {

	char str[50] = { 0 };
	char str2[50] = { 0 };
	
	printf("getupd:");
	Getupd(str, 50, stdin);

	fputs(str, stdout);

}

void Getupd(char* ctr, int n, FILE* stream)
{
	int i = 0;

	while (getchar() != '\n') continue;	//clear input buffer (func not work correct if you use other input func before them)

	fgets(ctr, n, stream);

	while (ctr[i] != '\0') i++;		//find position of \n

	if (ctr[i - 1] == '\n') ctr[i - 1] = '\0';	//replace \n to \0
	else
	{
		while (getchar() != '\n') continue;		//clear input buffer
	}

	return;
}
